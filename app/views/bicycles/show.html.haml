%center
  %p
    =image_tag @bicycle.photo
  %p
    %strong
      = "Name :"
    = @bicycle.name
  %p
    %strong
      = "Style : "
    = @bicycle.style
  %p
    %strong
      ="Price :"
    = @bicycle.price

  
  = link_to t('.back', :default => t("helpers.links.back")), bicycles_path, :class => 'btn btn-default'
  -if current_admin
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_bicycle_path(@bicycle), :class => 'btn btn-default'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), bicycle_path(@bicycle), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'delete btn btn-danger'
