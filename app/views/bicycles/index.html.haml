- @bicycles.each do |bicycle|
  .col-lg-3.col-md-4.bicycle-item
    -if current_admin
      .actions
        = link_to t('.edit', :default => t("helpers.links.edit")), edit_bicycle_path(bicycle), :class => 'btn btn-default btn-xs'
        = link_to t('.destroy', :default => t("helpers.links.destroy")), bicycle_path(bicycle), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'delete btn btn-xs btn-danger'
    =link_to bicycle do
      .img
        =image_tag bicycle.photo
      .desc
        .name.h5
          =bicycle.name
        .style.h6
          =bicycle.style
      .price
        ="$#{bicycle.price}"



         


